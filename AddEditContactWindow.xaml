<Window x:Class="AddressBookApp.AddEditContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddressBookApp"
        mc:Ignorable="d"
         Title="Контакт" Height="300" Width="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <TextBlock Text="Имя:"/>
        <TextBox x:Name="FirstNameBox" Margin="0,0,0,5"/>

        <TextBlock Text="Фамилия:"/>
        <TextBox x:Name="LastNameBox" Margin="0,0,0,5"/>

        <TextBlock Text="Телефон:"/>
        <TextBox x:Name="PhoneBox" Margin="0,0,0,5"/>

        <TextBlock Text="Категория:"/>
        <TextBox x:Name="CategoryBox" Margin="0,0,0,5"/>

        <Button Content="Сохранить" Click="Save_Click"/>
    </StackPanel>
</Window>