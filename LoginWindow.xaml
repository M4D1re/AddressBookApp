<Window x:Class="AddressBookApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddressBookApp"
        mc:Ignorable="d"
       Title="Вход" Height="200" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Выберите режим входа:" Margin="0,0,0,10"/>
        <Button Content="Войти как пользователь" Click="UserLogin_Click" Margin="0,0,0,10"/>
        <Button Content="Войти как админ" Click="AdminLogin_Click"/>
    </StackPanel>
</Window>
