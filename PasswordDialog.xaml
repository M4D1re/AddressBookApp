<Window x:Class="AddressBookApp.PasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddressBookApp"
        mc:Ignorable="d"
        Title="Введите пароль администратора" Height="150" Width="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        <PasswordBox x:Name="PasswordBox"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="60" Margin="5" Click="Ok_Click"/>
            <Button Content="Отмена" Width="60" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
