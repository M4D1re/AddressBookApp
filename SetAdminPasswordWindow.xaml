<Window x:Class="AddressBookApp.SetAdminPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AddressBookApp"
        mc:Ignorable="d"
      Title="Настройка пароля администратора" Height="250" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Новый пароль:" Grid.Row="0"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Margin="0,5,0,10"/>

        <Label Content="Повторите пароль:" Grid.Row="2"/>
        <PasswordBox x:Name="ConfirmPasswordBox" Grid.Row="3" Margin="0,5,0,10"/>

        <CheckBox x:Name="RemovePasswordCheckBox" Grid.Row="4" Content="Удалить пароль администратора" Margin="0,10,0,10"/>

        <Button Grid.Row="5" Content="Сохранить" Width="100" HorizontalAlignment="Right" Click="SetPasswordButton_Click"/>
    </Grid>
</Window>